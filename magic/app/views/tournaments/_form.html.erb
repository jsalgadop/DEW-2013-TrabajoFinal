    <%= f.label :Fecha_y_Hora %><br />
    <%= f.datetime_select :fechahora %>
  </div>
  <div class="field">
    <%= f.label :estado %><br />
    <%= f.select :estado, [['Pendiente','Pendiente'],['Activo','Activo'],['Finalizado','Finalizado']] %>
