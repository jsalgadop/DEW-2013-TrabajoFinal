        <td width=150>
            <%= f.select :estado, [['Pendiente','Pendiente'],['Activo','Activo'],['Finalizado','Finalizado']] %>
        </td>
      </tr>
    </table>
    <%= submit_tag "Search" %>
<% end %>
</div>
