<div class="searchs">
<%= form_for($option, :url => "filter_by_local") do |f| %>
    <table border="0">
      <tr>
        <td width="150">
          Search by local
        </td>
        <td width="150">
          <%= f.collection_select :local_id, Local.all, :id, :name, :prompt => false %>
        </td>
      </tr>
    </table>
    <%= submit_tag "Search" %>
<% end %>
</div>
<br>

